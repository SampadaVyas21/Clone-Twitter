<h2>Log in</h2>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div class="card">
  <div class="card-body">
    <div class="mb-3">
      <div class="field">
        <%= f.label :email, { class: "form-label"}%><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Enter Your Email"  %>
      </div>
    </div>
  <div class="mb-3">
    <div class="field">
      <%= f.label :password, class: 'form-label' %><br />
      <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "Enter Your Password" %>
    </div>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me, class: 'pcl' %><br>
      <%= f.label :remember_me, class: 'pcl' %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in", class: "btn btn-primary"  %>
  </div>
</div>
</div>
<% end %>

<%#= render "devise/shared/links" %>
