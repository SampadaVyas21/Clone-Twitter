<%= form_with model: @tweet do |form| %>
  <div class="form-control", style="width: 500px; margin-left: 36.5%; background-color: #F4FAFB;">
    <%= form.text_field :content, placeholder: "Enter Your Content Here", class: "form-control", style: "align-item:center; height: 180px; width: 450px; margin: 10px;" %>
    <%= form.label "Want to attach a Photo?", class: 'form-label', style: "margin-left: 10px" %>
    <%= form.file_field :images,:multiple => true, class: 'form-control', style: "width: 450px; margin: 10px" %>
  </div>
  <div class="submit">
    <%= form.submit "Post", class: "btn btn-primary", style: "margin:10px" %>
  </div>
<% end %>
